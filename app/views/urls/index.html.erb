<%= form_for @url do |u| %>
  <%= u.label :link %>
  <%= u.text_field :link %>
  <%= u.submit %>
<% end %>

<% if @urls %>
  <% @urls.each do |u| %>
  <%= link_to u.hashed , '/'+u.hashed %> => <%= link_to u.link, u.link %>
  | <%= link_to "x", url_path( u ), :method=> :delete %>
    <br>
  <% end %>
<% end %>
